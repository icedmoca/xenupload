	explain="{{ phrase('ncms_server_address_explain') }}" />

<xf:numberboxrow name="options[port]" value="{$options.port}" min="1" max="65535"
	label="{{ phrase('ncms_server_port') }}"
	explain="{{ phrase('ncms_server_port_explain') }}" />]]></template>
</templates>
